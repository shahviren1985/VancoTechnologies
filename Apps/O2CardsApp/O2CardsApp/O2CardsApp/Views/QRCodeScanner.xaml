<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="O2CardsApp.Views.QRCodeScanner">
    <NavigationPage.TitleView>
        <Label Text="Scan QR Code" TextColor="#2ECC71" FontAttributes="Bold" HorizontalTextAlignment="Center" />
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="takePhoto" Text="Scan QR Code"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>