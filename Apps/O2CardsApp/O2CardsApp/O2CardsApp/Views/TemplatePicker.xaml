<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="O2CardsApp.Views.TemplatePicker">
    <NavigationPage.TitleView>
        <Label Text="Business Card Template" TextColor="#2ECC71" FontAttributes="Bold" HorizontalTextAlignment="Center" />
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Padding="10" Orientation="Vertical">
            <StackLayout Orientation="Vertical" Margin="2">
                <Image x:Name="horizontal" Source="business_cards_horizontal" HeightRequest="91" WidthRequest="141" />
            </StackLayout>
            <StackLayout Orientation="Vertical" Margin="2">
                <Image x:Name="vertical" Source="business_cards_vertical" HeightRequest="128" WidthRequest="84"/>
            </StackLayout>
            <StackLayout VerticalOptions="End" Margin="2">
                <Button x:Name="btnSave" Text="Save" BackgroundColor="#2ECC71" TextColor="White" HorizontalOptions="Center" WidthRequest="400" HeightRequest="50"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>