<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/color_white"
    tools:context=".Activity.SuccessqrcodeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view_reward">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_msg_scanQRCode"
                android:textColor="@color/color_dark_grey"
                android:textSize="@dimen/font_size_16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_grey"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Service Provider"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16dp" />

            <TextView
                android:id="@+id/tv_BankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:textColor="@color/color_purple"
                android:textSize="@dimen/font_size_20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_grey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch Details"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16dp" />

            <TextView
                android:id="@+id/tv_Branch_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch Details Values"
                android:textColor="@color/color_purple"
                android:textSize="@dimen/font_size_18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_grey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Currency"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16dp" />

            <TextView
                android:id="@+id/tv_From_Currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INR"
                android:textColor="@color/color_purple"
                android:textSize="@dimen/font_size_18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_grey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Currency"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16dp" />

            <TextView
                android:id="@+id/tv_To_Currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INR"
                android:textColor="@color/color_purple"
                android:textSize="@dimen/font_size_18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_light_grey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16dp" />

            <TextView
                android:id="@+id/tv_Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/color_purple"
                android:textSize="@dimen/font_size_18dp" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/view_reward"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_hint_grey"
        app:layout_constraintBottom_toTopOf="@+id/tv_get_rewards" />

    <TextView
        android:id="@+id/tv_get_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Rewards"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_18dp"
        android:background="@color/color_dark_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>